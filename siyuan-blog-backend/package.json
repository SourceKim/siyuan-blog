{
  "name": "siyuan-blog-backend",
  "version": "1.0.0",
  "description": "SiYuan Blog 后端 API 服务",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "copy-assets": "copyfiles -u 1 src/**/*.json dist/ && copyfiles -u 0 assets/**/* dist/",
    "start": "node dist/index.js",
    "dev": "NODE_ENV=development concurrently \"tsc --watch\" \"npm run copy-assets\" \"nodemon dist/index.js\"",
    "dev:ts": "ts-node-dev --respawn --transpile-only src/index.ts",
    "lint": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "concurrently": "^8.2.2",
    "copyfiles": "^2.4.1",
    "eslint": "^8.57.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "siyuan",
    "blog",
    "express",
    "typescript",
    "json-config"
  ],
  "author": "",
  "license": "MIT"
}
